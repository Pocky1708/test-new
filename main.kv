#: import utils kivy.utils
FirstWindow:
    LoginWindow:
    RegisterWindow:


<LoginWindow>:
    name: "log_win"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 20
        spacing: 20
        
        Image:
            source: "Logo.png"
            pos_hint: {"center_y": .5}
                

        MDTextField:
            id: Name
            required: True
            mode: "rectangle"
            hint_text: "Username"
            icon_right: "account"
            hint_text_color: 0.5, 0.5, 0.5, 1
            size_hint_x: None
            width: 300
            font: 18
            pos_hint: {"center_x": .5}
        MDTextField:
            id: passWord
            required: True
            mode: "rectangle"
            hint_text: "password"
            hint_text_color: 0,1,0,1
            icon_right: "eye-off"
            size_hint_x: None
            width: 300
            font: 18
            pos_hint: {"center_x": .5}

        #Login
        MDRaisedButton:
            text: "Login"
            md_bg_color: "blue"
            size_hint: (.4, .07)
            font_size: "24sp"
            pos_hint: {"center_x": .5}
            on_release: root.check_info()

        #Create account
        MDFlatButton:
            text: "[u]Don't have an account?[/u]"
            theme_text_color: "Custom"
            text_color: "skyblue"
            pos_hint: {"center_x": .5}
            on_release: 
                app.root.current = "regis_win"
                root.manager.transition.direction = "left"

<RegisterWindow>:
    name: "regis_win"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        
        padding: 20
        spacing: 20

        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_x": .1, "center_y": .9}
            on_release:
                app.root.current = "log_win"
                root.manager.transition.direction = "right"

        MDLabel:
            text: "Create an account"
            font_size: 20
            halign: "center"
            size_hint_y: 1.3

        MDTextField:
            id: F_Name
            required: True
            mode: "rectangle"
            hint_text: "Username"
            hint_text_color: 0.5, 0.5, 0.5, 1
            size_hint_x: None
            width: 300
            font: 18
            pos_hint: {"center_x": .5, "center_y": .5}
        MDTextField:
            id: F_passWord
            required: True
            mode: "rectangle"
            hint_text: "password"
            hint_text_color: 0,1,0,1
            size_hint_x: None
            width: 300
            font: 18
            pos_hint: {"center_x": .5}

        #Login
        MDRaisedButton:
            text: "Register"
            md_bg_color: utils.get_color_from_hex("#6de888")
            size_hint: (.4, .07)
            font_size: "24sp"
            pos_hint: {"center_x": .5}
            on_release: root.check_data()